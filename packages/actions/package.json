{
    "name": "@p0tion/actions",
    "version": "0.3.0",
    "description": "A set of actions and helpers for CLI commands",
    "repository": "https://github.com/quadratic-funding/mpc-phase2-suite",
    "homepage": "https://github.com/quadratic-funding/mpc-phase2-suite",
    "bugs": "https://github.com/quadratic-funding/mpc-phase2-suite/issues",
    "license": "MIT",
    "main": "dist/src/index.node.js",
    "exports": {
        "import": "./dist/src/index.node.mjs",
        "require": "./dist/src/index.node.js"
    },
    "types": "dist/types/index.d.ts",
    "engines": {
        "node": ">=16.14.0"
    },
    "files": [
        "dist/",
        "src/",
        "types/"
    ],
    "keywords": [
        "typescript",
        "zero-knowledge",
        "zk-snarks",
        "phase-2",
        "trusted-setup",
        "ceremony",
        "snarkjs",
        "circom"
    ],
    "scripts": {
        "build": "rimraf dist && rollup -c rollup.config.ts --configPlugin typescript",
        "build:watch": "rollup -c rollup.config.ts -w --configPlugin typescript",
        "pre:publish": "yarn build",
        "compile:contracts": "hardhat compile",
        "hackathon:add_coordinator": "GOOGLE_APPLICATION_CREDENTIALS=\"../backend/serviceAccountKey.json\" && NODE_ENV=prod ts-node test/utils/hackathon.ts add",
        "hackathon:remove_coordinator": "GOOGLE_APPLICATION_CREDENTIALS=\"../backend/serviceAccountKey.json\" && NODE_ENV=prod ts-node test/utils/hackathon.ts remove",
        "test:contracts": "GOOGLE_APPLICATION_CREDENTIALS=\"../backend/serviceAccountKey.json\" && NODE_ENV=prod hardhat test test/unit/contract.test.ts",
        "verify:ceremony": "GOOGLE_APPLICATION_CREDENTIALS=\"../backend/serviceAccountKey.json\" && NODE_ENV=prod hardhat verifyCeremony",
        "docs": "typedoc src/**/*.ts --out ../../docs/actions"
    },
    "dependencies": {
        "@octokit/auth-oauth-device": "^4.0.3",
        "@types/winston": "^2.4.4",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "dotenv": "^16.0.3",
        "ethers": "^5.4.0",
        "ffjavascript": "^0.2.57",
        "firebase": "^9.18.0",
        "firebase-admin": "^11.5.0",
        "googleapis": "^110.0.0",
        "puppeteer": "^19.5.2",
        "puppeteer-extra": "^3.3.4",
        "puppeteer-extra-plugin-anonymize-ua": "^2.4.4",
        "puppeteer-extra-plugin-stealth": "^2.11.1",
        "rimraf": "^4.4.0",
        "rollup": "^3.19.1",
        "solc": "^0.8.19"
    },
    "devDependencies": {
        "@ethersproject/providers": "^5.7.2",
        "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
        "@nomiclabs/hardhat-ethers": "^2.2.2",
        "@typechain/ethers-v5": "^10.2.0",
        "@typechain/hardhat": "^6.1.5",
        "@types/mocha": "^10.0.1",
        "@types/rollup-plugin-auto-external": "^2.0.2",
        "hardhat": "^2.13.0",
        "rollup-plugin-auto-external": "^2.0.0",
        "rollup-plugin-cleanup": "^3.2.1",
        "rollup-plugin-typescript2": "^0.34.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3",
        "winston": "^3.8.2"
    },
    "publishConfig": {
        "access": "public"
    }
}
